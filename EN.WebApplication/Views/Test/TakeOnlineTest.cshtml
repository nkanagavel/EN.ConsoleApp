                                    {{opt.Option}}
                                </label> <br />
                            </div>

                            <button class="btn btn-primary no-radius" data-ng-click="submitAnswer(question)"
                                    style="margin-top: 10px;font-size: 15px;">
                                Submit Answer
                            </button>
                        </div>*@

                    <div class="card-body no-radius">
                        <table class="table" style="margin:0px auto;font-size: 14px;">

                            <tbody>
                                <tr>
                                    <td><label for="Name" class="margin-bottom-0px">IC Number  </label></td>
                                    <td><input type="text" class="form-control form-control-sm col-md-8" data-ng-model="Name"></td>
                                </tr>
                                <tr>
                                    <td><label for="IcNumber" class="margin-bottom-0px">Authendication Key</label></td>
                                    <td><input type="text" class="form-control form-control-sm col-md-8" data-ng-model="IcNumber"></td>
                                </tr>

                                <tr>
                                    <td></td>
                                    <td>

